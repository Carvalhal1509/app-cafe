@using app_cadastro.Enums;
@model VaquinhaCafeModel
@{
    ViewData["Title"] = "Alterar Vaquinha";

}


<div class="text-center mt-3">
    <h3>Alterar Vaquinha</h3>

</div>
<div id="overlay" class="overlay container">
    <div class="container">
        @if (TempData["MensagemSucesso"] != null)
        {<div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="btn btn-danger btn-close btn-sm close-alert" data-bs-dismiss="alert" arial-label="Close"></button>
                @TempData["MensagemSucesso"]
            </div>
        }

        @if (TempData["MensagemErro"] != null)
        {<div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="btn btn-danger btn-close btn-sm close-alert" data-bs-dismiss="alert" arial-label="Close"></button>
                @TempData["MensagemErro"]
            </div>
        }
    </div>

    <form asp-controller="Cafe" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="Id_Vaquinha_Cafe" />

        <div class="row">
            <div class="form-group col-sm-6">
                <label>Nome*</label>
                <input type="text" asp-for="Nome" class="form-control" placeholder="EX: Vaquinha do mês de Janeiro">

            </div>

            <div class="form-group col-sm-6">
                <label>Descrição*</label>
                <input type="text" asp-for="Descricao" class="form-control" placeholder="EX: Valor de contribuição: R$12,00">
            </div>

            <div class="form-group col-sm-6">
                <label>Prazo de contribuição*</label>
                <input type="date" asp-for="Prazo_Pagamento" class="form-control" placeholder="DD/MM/AAAA">
            </div>

            <div class="form-group col-sm-6">
                <label>Chave Pix*</label>
                <input type="text" asp-for="Chave_Pix" class="form-control" placeholder="EX: 71999998888">
            </div>
        </div>
            <br />


            <div class="btn-group" role="group">
                <a class="btn btn-light" role="button" asp-controller="Cafe" asp-action="Index">Voltar</a>
                <button type="submit" class="btn btn-warning ms-2">Continuar</button>
            </div>
    </form>
</div>
