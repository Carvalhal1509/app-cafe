@model LoginModel
@{
    Layout = "_Layout Deslogada";
    ViewData["Title"] = "Login";

}

<form asp-controller="Login" asp-action="Entrar" method="post">
    <section class="vh-100 bg-image"
             style="background-image: url('https://static.stealthelook.com.br/wp-content/uploads/2022/02/receitas-faceis-e-gostosas-pra-voce-fazer-no-cafe-da-manha-the-peach-delirium-cafe-cremoso-20220224155152.jpg'); ">

        <div class="mask d-flex align-items-center h-100 gradient-custom-3">
            <div class="container h-100">
                <div class="row d-flex justify-content-center align-items-center h-100">
                    <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                        <div class="card" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <h3>Café & Aniversário</h3>

                                    <div class="form-outline mb-4">
                                        <label>Login</label>
                                        <input type="text" asp-for="Login" class="form-control form-control-lg" id="login" />
                                        @Html.ValidationMessageFor(x => x.Login)
                                    </div>

                                    <div class="form-outline mb-4">
                                        <label>Senha</label>
                                        <input type="password" asp-for="Senha" class="form-control form-control-lg" id="senha" />
                                        @Html.ValidationMessageFor(x => x.Senha)
                                    </div>

                                    <div class="btn-group" role="group">
                                        <a class="btn btn-light btn-lg" role="button" asp-controller="Contato" asp-action="Criar">Registrar</a>
                                        <a role="button" class="btn btn-warning btn-lg ms-2">Login</a>

                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

