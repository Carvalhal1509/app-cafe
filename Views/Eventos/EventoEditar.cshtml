@using app_cadastro.Enums;
@model EventoModel
@{
    ViewData["Title"] = "editar evento";

}


<div class="text-center mt-3">
    <h3>Realmente deseja alterar o evento?</h3>

</div>
<div id="overlay" class="overlay container">
    <div class="container">
        @if (TempData["MensagemSucesso"] != null)
        {<div class="alert alert-success alert-dismissible" role="alert">
                <button type="button" class="btn btn-danger btn-close btn-sm close-alert" data-bs-dismiss="alert" arial-label="Close"></button>
                @TempData["MensagemSucesso"]
            </div>
        }

        @if (TempData["MensagemErro"] != null)
        {<div class="alert alert-danger alert-dismissible" role="alert">
                <button type="button" class="btn btn-danger btn-close btn-sm close-alert" data-bs-dismiss="alert" arial-label="Close"></button>
                @TempData["MensagemErro"]
            </div>
        }
    </div>

    <form asp-controller="Eventos" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="Id" />


        <div class="row">
            <div class="form-group col-sm-4">
                <label>Organizador*</label>
                <input type="text" asp-for="Organizador" value="@ViewBag.Nome" class="form-control" disabled>

            </div>

            <div class="form-group col-sm-4">
                <label>Nome do evento*</label>
                <input type="text" asp-for="NomeEvento" class="form-control">

            </div>

            <div class="form-group col-sm-4">
                <label>Data do Evento*</label>
                <input type="date" asp-for="DataEvento" class="form-control" placeholder="DD/MM/AAAA">
            </div>

            <div class="form-group col-sm-12">
                <label>Descrição*</label>
                <textarea asp-for="Descricao" class="form-control" placeholder="Ex: Local: CTI - Horário: 09:00 - OBS: vir trajado de Amaraleo em comemoração ao Setembro Amarelo"></textarea>
            </div>

        </div>

        <br />


        <div class="btn-group" role="group">
            <a class="btn btn-light" role="button" asp-controller="Eventos" asp-action="MeusEventos">Voltar</a>
            <button type="submit" class="btn btn-warning ms-2">Continuar</button>
        </div>
    </form>
</div>
