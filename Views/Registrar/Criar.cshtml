@using app_cadastro.Enums;
@model Usuarios
@{
    ViewData["Title"] = "Cadastrar Usuário";

}


<div class="text-center mt-3">
    <h3>Cadastrar Usuário</h3>

</div>
<div id="overlay" class="overlay container">
    <form asp-controller="Registrar" asp-action="Criar" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Nome Completo*</label>
            <input type="text" asp-for="Nome" class="form-control" placeholder="Ex: Jose da Silva Santos">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>

        <div class="form-group">
            <label>Email*</label>
            <input type="email" asp-for="Email" class="form-control" placeholder="Ex: jose@email.com.br">
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="form-group">
            <label>Senha*</label>
            <input type="password" asp-for="Senha" class="form-control">
            @Html.ValidationMessageFor(x => x.Senha)
        </div>

        <div class="form-group">
            <label>Celular*</label>
            <input type="text" asp-for="Celular" class="form-control" maxlength="11" placeholder="Ex: 71999998888">
            @Html.ValidationMessageFor(x => x.Celular)
        </div>

        <div class="form-group">
            <label>Aniversário</label>
            <input type="date" asp-for="Aniversario" class="form-control">
        </div>

        <div class="form-group">
            <label for="nome" class="form-label">Perfil*</label>
            <select asp-for="Perfil" class="form-control">
                <option value="@PerfilEnum.Padrao">Padrão</option>
                <option value="@PerfilEnum.Admin">Administrador</option>
            </select>
            @Html.ValidationMessageFor(x => x.Perfil)
        </div>

        <div class="btn-group" role="group">
            <a class="btn btn-light btn-lg" role="button" asp-controller="Registrar" asp-action="PaginaAdm">Voltar</a>
            <button type="submit" class="btn btn-warning btn-lg ms-2">Continuar</button>
        </div>
    </form>
     </div>
