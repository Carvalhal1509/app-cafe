@{
    ViewData["Title"] = "Aniversariante do mês";
}

<div class="text-center">

    <h1 class="display-4">Lista Aniversariante do Mês</h1>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a role="button" class="btn btn-warning" asp-controller="Contato" asp-action="Editar">Inserir Item</a>
    </div>
    <br />
    <table class="table">
        <thead class="table">
            <tr>
                <th scope="col">Item</th>
                <th scope="col">Produto</th>
                <th scope="col">Nome</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Bolo</td>
                <td>João</td>
                <td>
                    <div class="d-grid gap-2 d-md-block">
                        <a class="btn btn-warning btn-small" id=btnSalvar asp-controller="Contato" asp-action="Inserir">Inserir Nome</a> 
                        <a class="btn btn-light btn-small" id=btnapagar>Apagar</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>


