            <li>
                <div class="iocn-link">
                    <a href="#">
                        <i class="material-symbols-outlined">edit_calendar</i><span class="link_name">Eventos</span>
                    </a>
                    <i class='bx bxs-chevron-down arrow'></i>
                </div>
                <ul class="sub-menu">
                    <li><a asp-controller="Eventos" asp-action="Index">Eventos Ativos</a></li>
                </ul>
            </li>
            <li>
