@model AniversariantesModel
@{
    ViewData["Title"] = "Criar Aniversariantes do Mês";
}
<div class="text-center mt-3">
    <h3>Criar Aniversariantes do Mês</h3>

</div>

<div class="container">
    @if (TempData["MensagemSucesso"] != null)
    {<div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {<div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger btn-sm close-alert" arial-label="Close">X</button>
            @TempData["MensagemErro"]
        </div>
    }
</div>

<div id="overlay" class="overlay container">
    <br />
    <form asp-controller="Aniversariantes" asp-action="CriarAniversariantes" method="post">
        <div class="row">

            <div class="form-group col-sm-6">
                <label>Nome*</label>
                <input type="text" asp-for="Nome" class="form-control" placeholder="Ex: Aniversariantes do mês de Novembro">

            </div>

            <div class="form-group col-sm-6">
                <label>Data do Evento*</label>
                <input type="date" asp-for="DataRealizacao" class="form-control" placeholder="DD/MM/AAAA">
            </div>

            <div class="form-group col-sm-12">
                <label>Descrição*</label>
                <textarea asp-for="Descricao" class="form-control" placeholder="Ex: Local: CTI - Horário: 09:00 - OBS: vir trajado de Amarelo em comemoração ao Setembro Amarelo"></textarea>

            </div>

        </div>

        <br />

        <a class="btn btn-light" role="button" asp-controller="Aniversariantes" asp-action="Index">Voltar</a>
        <button type="submit" class="btn btn-warning ms-2">Continuar</button>
    </form>
</div>